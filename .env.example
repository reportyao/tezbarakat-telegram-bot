# =====================================================
# PostgreSQL 数据库配置
# =====================================================
POSTGRES_DB=tezbarakat
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# 数据库连接字符串（自动生成，通常无需修改）
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =====================================================
# FastAPI 后端配置
# =====================================================
JWT_SECRET=your_super_secret_key_for_jwt_change_this_in_production
SECRET_KEY=your_super_secret_key_for_jwt_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
DEBUG=false

# 管理后台初始管理员账号
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_change_this

# =====================================================
# Telegram API 配置
# =====================================================
# 从 https://my.telegram.org 获取
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_telegram_api_hash

# =====================================================
# Dify AI 服务配置
# =====================================================
DIFY_API_URL=http://your_dify_instance/v1
DIFY_API_KEY=your_dify_api_key
DIFY_WORKFLOW_ID=your_dify_intent_analysis_workflow_id
DIFY_KNOWLEDGE_WORKFLOW_ID=your_dify_knowledge_chat_workflow_id
DIFY_CONFIDENCE_THRESHOLD=0.7

# =====================================================
# Bot 运行参数
# =====================================================
# 同一账号对不同用户发送私信的最小间隔（分钟）
PRIVATE_MESSAGE_INTERVAL_MINUTES=5

# 对同一用户的私信间隔（天）
USER_COOLDOWN_DAYS=3

# 单账号每日私信上限
DAILY_PRIVATE_MESSAGE_LIMIT=20

# 单群每小时回复上限
HOURLY_GROUP_REPLY_LIMIT=3

# 回复延迟（秒）
REPLY_DELAY_MIN_SECONDS=10
REPLY_DELAY_MAX_SECONDS=60

# 打字状态持续时间（秒）
TYPING_DURATION_MIN_SECONDS=2
TYPING_DURATION_MAX_SECONDS=5

# 活跃时段（塔吉克斯坦时间）
ACTIVE_HOURS_START=8
ACTIVE_HOURS_END=24

# 功能开关
ENABLE_GROUP_REPLY=true
ENABLE_PRIVATE_MESSAGE=true

# =====================================================
# 系统配置
# =====================================================
# 时区
TIMEZONE=Asia/Dushanbe

# 日志级别
LOG_LEVEL=INFO

# Bot 核心服务 API 端口
BOT_API_PORT=8001
